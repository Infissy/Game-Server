{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "CommonJS",                    
    "lib": ["es6"],                     
    "outDir": "/build/",
    
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "skipLibCheck": true,
    
  },
  "compileOnSave": true,
 
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
   
  ]
  
}